{
  "manifest_version": 3,
  "name": "Bhagavad Gita Quotes - Daily Hindi Shlokas",
  "version": "1.1",
  "description": "Daily Shrimad Bhagavad Gita Shlokas in Hindi. Get Krishna quotes, daily notifications, and offline wisdom to boost mindfulness.",
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "notifications",
    "alarms"
  ],
  "web_accessible_resources": [
    {
      "resources": ["quotes.json"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "48": "icon/icon48.png",
    "100": "icon/icon100.png",
    "128": "icon/icon128.png"
  }

}

[
  { "text": "कर्म करने का अधिकार तुम्हारा है, फल पर नहीं।", "ref": "भगवद्गीता 2.47" },
  { "text": "फल की आसक्ति त्याग कर कर्म करो।", "ref": "भगवद्गीता 2.47" },
  { "text": "समत्व ही योग है।", "ref": "भगवद्गीता 2.48" },
  { "text": "बुद्धियोग से कर्मों के बंधन कट जाते हैं।", "ref": "भगवद्गीता 2.49" },
  { "text": "ज्ञानी दुख और सुख में समान रहता है।", "ref": "भगवद्गीता 2.56" },
  { "text": "इंद्रियों पर संयम रखने वाला स्थिर बुद्धि वाला होता है।", "ref": "भगवद्गीता 2.61" },
  { "text": "क्रोध से भ्रम और विवेक का नाश होता है।", "ref": "भगवद्गीता 2.63" },
  { "text": "जो भीतर से संतुष्ट है वही शांत है।", "ref": "भगवद्गीता 2.70" },
  { "text": "योग से कर्मों में कुशलता आती है।", "ref": "भगवद्गीता 2.50" },
  { "text": "जो जन्मा है उसकी मृत्यु निश्चित है।", "ref": "भगवद्गीता 2.27" },

  { "text": "अपने कर्तव्य का पालन भय से मुक्त करता है।", "ref": "भगवद्गीता 3.19" },
  { "text": "यज्ञ से वर्षा और अन्न उत्पन्न होता है।", "ref": "भगवद्गीता 3.14" },
  { "text": "कर्तव्य से विमुख होना पतन का कारण है।", "ref": "भगवद्गीता 3.35" },
  { "text": "कामना ही क्रोध का मूल है।", "ref": "भगवद्गीता 3.37" },
  { "text": "संयम से ज्ञान प्रकट होता है।", "ref": "भगवद्गीता 3.41" },

  { "text": "ज्ञान यज्ञ सभी यज्ञों में श्रेष्ठ है।", "ref": "भगवद्गीता 4.33" },
  { "text": "ज्ञान अग्नि कर्मों को भस्म कर देती है।", "ref": "भगवद्गीता 4.37" },
  { "text": "श्रद्धावान ज्ञान प्राप्त करता है।", "ref": "भगवद्गीता 4.39" },
  { "text": "अज्ञान शत्रु के समान है।", "ref": "भगवद्गीता 4.42" },

  { "text": "कर्मयोगी संसार में बंधता नहीं।", "ref": "भगवद्गीता 5.10" },
  { "text": "जो भीतर सुख पाता है वही मुक्त है।", "ref": "भगवद्गीता 5.24" },
  { "text": "ज्ञानी सबको समान दृष्टि से देखता है।", "ref": "भगवद्गीता 5.18" },

  { "text": "मन को अभ्यास और वैराग्य से वश में किया जा सकता है।", "ref": "भगवद्गीता 6.35" },
  { "text": "योगी सबसे श्रेष्ठ है।", "ref": "भगवद्गीता 6.47" },
  { "text": "जो आत्मा में स्थित है वह सुखी है।", "ref": "भगवद्गीता 6.20" },

  { "text": "मैं इस जगत का आधार हूँ।", "ref": "भगवद्गीता 7.7" },
  { "text": "मुझसे बढ़कर कुछ नहीं।", "ref": "भगवद्गीता 7.7" },
  { "text": "जो मुझे जानता है वह मुक्त होता है।", "ref": "भगवद्गीता 7.30" },

  { "text": "जो मुझे स्मरण करता है वह मुझे प्राप्त होता है।", "ref": "भगवद्गीता 8.5" },
  { "text": "अभ्यास से मन स्थिर होता है।", "ref": "भगवद्गीता 8.8" },
  { "text": "परम गति मुझे जानने से मिलती है।", "ref": "भगवद्गीता 8.15" },

  { "text": "मैं सभी प्राणियों में समान रूप से स्थित हूँ।", "ref": "भगवद्गीता 9.29" },
  { "text": "जो भक्ति से मुझे अर्पित करता है, मैं उसे स्वीकार करता हूँ।", "ref": "भगवद्गीता 9.26" },
  { "text": "मेरा भक्त कभी नष्ट नहीं होता।", "ref": "भगवद्गीता 9.31" },

  { "text": "मैं सबका हृदय में निवास करता हूँ।", "ref": "भगवद्गीता 10.20" },
  { "text": "मैं ज्ञानियों का ज्ञान हूँ।", "ref": "भगवद्गीता 10.38" },
  { "text": "मेरी विभूतियाँ अनंत हैं।", "ref": "भगवद्गीता 10.40" },

  { "text": "समस्त लोक मुझमें स्थित हैं।", "ref": "भगवद्गीता 11.7" },
  { "text": "काल रूप में मैं सबका संहार करता हूँ।", "ref": "भगवद्गीता 11.32" },

  { "text": "भक्ति से ही मुझे जाना जा सकता है।", "ref": "भगवद्गीता 11.54" },

  { "text": "जो मुझे प्रिय है वह द्वेष रहित होता है।", "ref": "भगवद्गीता 12.13" },
  { "text": "भक्त सुख-दुख में समान रहता है।", "ref": "भगवद्गीता 12.15" },
  { "text": "श्रद्धावान भक्त मुझे प्रिय है।", "ref": "भगवद्गीता 12.20" },

  { "text": "क्षेत्र और क्षेत्रज्ञ को जानो।", "ref": "भगवद्गीता 13.1" },
  { "text": "विनय और अहिंसा ज्ञान के लक्षण हैं।", "ref": "भगवद्गीता 13.7–8" },
  { "text": "ज्ञान से मोक्ष प्राप्त होता है।", "ref": "भगवद्गीता 13.24" },

  { "text": "सत्व ज्ञान की ओर ले जाता है।", "ref": "भगवद्गीता 14.6" },
  { "text": "रजस आसक्ति उत्पन्न करता है।", "ref": "भगवद्गीता 14.7" },
  { "text": "तमस अज्ञान को बढ़ाता है।", "ref": "भगवद्गीता 14.8" },
  { "text": "तीनों गुणों से परे होना मुक्ति है।", "ref": "भगवद्गीता 14.20" },

  { "text": "वैराग्य से बंधन कटते हैं।", "ref": "भगवद्गीता 15.3" },
  { "text": "मैं ही वेदों से जाना जाता हूँ।", "ref": "भगवद्गीता 15.15" },
  { "text": "जो मुझे जानता है वह बुद्धिमान है।", "ref": "भगवद्गीता 15.19" },

  { "text": "अभय दैवी गुण है।", "ref": "भगवद्गीता 16.1" },
  { "text": "अहंकार आसुरी स्वभाव है।", "ref": "भगवद्गीता 16.4" },
  { "text": "क्रोध और लोभ विनाश के द्वार हैं।", "ref": "भगवद्गीता 16.21" },

  { "text": "श्रद्धा मनुष्य का स्वरूप बनाती है।", "ref": "भगवद्गीता 17.3" },
  { "text": "सात्त्विक आहार शुद्ध होता है।", "ref": "भगवद्गीता 17.8" },

  { "text": "त्याग से शांति मिलती है।", "ref": "भगवद्गीता 18.2" },
  { "text": "अपने स्वभाव के अनुसार कर्म करो।", "ref": "भगवद्गीता 18.45" },
  { "text": "मुझमें शरण लो, मैं मुक्त करूँगा।", "ref": "भगवद्गीता 18.66" },

